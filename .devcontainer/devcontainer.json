{
  "name": "Your Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "your-service-name", // This should be one of the service names from your docker-compose.yml
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "extensions": [
    "ms-azuretools.vscode-docker"
  ],
  "forwardPorts": [3000], // Add ports you want to forward
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "remoteEnv": {
    "ENV_VAR": "value" // Optional: Add any environment variables for the container
  }
}
